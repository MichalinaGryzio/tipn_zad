    "zdanie = input(\"Napisz zdanie:\")\n",
    "\n",
    "spacja = 0\n",
    "\n",
    "for i in zdanie:\n",
    "    if i == \" \":\n",
    "        spacja += 1\n",
    "    if i == \" , \":\n",
    "        spacja -= 1\n",
    "\n",
    "spacja = spacja + 1        \n",
    "\n",
    "print(\"Liczba słów w Twoim zdaniu wynosi:\", spacja)"
